<h3 class="mt-2 text-center">ایجاد مخاطب جدید</h3>
<div class="w-50 mx-auto"></div>
<%- include('./includes/validationErrors.ejs') %>
<div class="d-flex align-items-center justify-content-center">
  <form action="/dashboard/add-contact" class="w-50" method="POST">
    <div class="form-group">
      <label for="fullname"> نام و نام خانوادگی :</label>
      <input
        type="text"
        autofocus
        class="form-control w50 mb-2"
        placeholder="نام و نام خانوادگی را وارد کنید"
        name="fullname"
        id="fullname"
      />
    </div>

    <div class="form-group">
      <label for="phone">شماره تماس :</label>
      <input
        type="text"
        class="form-control w50"
        name="phone"
        placeholder="شماره تماس را وارد کنید"
        id="phone"
      />
    </div>
    <div class="form-group">
      <label for="email">ایمیل :</label>
      <input type="email" class="form-control w50" name="email" id="email" placeholder="ایمیل را وارد کنید" />
    </div>

    <div class="row">
      <input type="submit" value="ایجاد" class="btn btn-success m-2" />
      <a href="/dashboard" class="btn btn-warning m-2">انصراف</a>
    </div>
  </form>
</div>
